<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.collinsmallegan.brickcalc.Tab1_Landscape">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:text="Area Dimensions"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/YardDimenssions"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
        />
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/landWidth"
                android:hint="Width FT"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/landLength"
                android:hint="Length FT"
                android:textAlignment="center"/>
        <TextView
                android:text="Brick Dimension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BrickDimmensions"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/landWidthBrick"
                android:layout_marginTop="12dp"
                android:hint="Width IN" tools:layout_editor_absoluteX="84dp" android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/landDepthBrick"
                android:hint="Depth IN" android:textAlignment="center"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/landRow"
                android:hint="Rows" android:layout_marginTop="19dp"
                android:textAlignment="center"/>
        <Button
                android:text="Calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_marginTop="2dp"
                android:onClick="calculateLandscape"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="18sp" android:textAlignment="center"
                android:id="@+id/landArea"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="18sp" android:textAlignment="center"
                android:id="@+id/landBrickCount"/>
    </LinearLayout>

</FrameLayout>
